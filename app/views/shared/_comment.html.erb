<%= form_with(url: comment, local: true) do |form| %>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, :value => current_user.id %>
  </div>


  <div class="actions">
    <%= form.submit :class => "btn btn-primary" %>
  </div>
<% end %>


